<h1><%= @article.title %></h1>
<p>
    <%= @article.text %>
</p>
<% @article.comments.each do |comment| %>

<h5>
   <i>Author name:</i> <%= comment.author %><hr />
</h5>
<p>
   <i>Comment:</i> <%= comment.body %>
</p>
<% end %>
<p>
  <%= form_for ([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <p>
      <%= f.submit %>
  </p>
  <% end %>
